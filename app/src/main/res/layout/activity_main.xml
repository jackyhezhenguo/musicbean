<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.musicbean.ui.main.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/realcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-12dp"
        android:background="@drawable/tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_main_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="8sp" />
        <RadioButton
            android:id="@+id/tab_pop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_main_selector"
            android:gravity="center"
            android:text="排行榜"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="8sp" />
        <RadioButton
            android:id="@+id/tab_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_main_selector"
            android:gravity="center"
            android:text="活动"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="8sp" />

        <RadioButton
            android:id="@+id/tab_live"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_live_selector"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textSize="0sp" />

        <RadioButton
            android:id="@+id/tab_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_mine_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="8sp" />
    </RadioGroup>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_tips"
        android:visibility="gone"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:layout_width="260dp"
            android:layout_height="340dp">
        <LinearLayout
            android:id="@+id/lv_tips"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/present_shape"
            android:layout_height="280dp">
            
            <ImageView
                android:src="@drawable/guanzhu_micicon"
                android:layout_width="match_parent"
                android:layout_height="245dp" />

            <TextView
                android:textSize="16sp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:textColor="#333333"
                android:text="赠送音悦豆？"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            
            

        </LinearLayout>
            <ImageView
                android:src="@drawable/big_shape"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="117.5dp"
                android:id="@+id/iv_cancel"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
