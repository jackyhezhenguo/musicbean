<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rrect_white_bg"
            android:gravity="top"
            android:hint="请输入"
            android:lines="3"
            android:paddingBottom="9dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="9dp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/clear_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_input"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/edt_input"
            android:padding="9dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_clear_input"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/green_dot"
        android:drawablePadding="5dp"
        android:text="@string/getcode_tips"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rrect_green_bigcorner_bg"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/text_black"
        android:textSize="14sp" />
</LinearLayout>
