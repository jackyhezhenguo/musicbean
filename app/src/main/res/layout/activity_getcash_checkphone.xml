<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/green_dot"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="验证手机已确保你的账户安全"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/pay_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/corners_border_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="+86"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入11位手机号码"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/corners_border_gray"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_hint"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_getcode"
            android:layout_width="134dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rrect_green_bigcorner_bg"
            android:gravity="center"
            android:text="@string/click_getcode"
            android:textColor="@drawable/getcode_text_color_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="该手机号用于接收提现相关短信及重新绑定支付宝账号"
        android:textColor="@color/custom_red"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/rrect_green_bigcorner_bg"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

</LinearLayout>
