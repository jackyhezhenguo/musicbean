<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musicbean.competition.CompetitionListDetailActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#98C524"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_left"
            android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="赛事榜单"
            android:textColor="#F6FAEE"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <ImageView
            android:visibility="visible"
            android:src="@drawable/icon_search"
            android:id="@+id/tv_upload"
            android:textColor="@color/black_alpha80"
            android:text="上传"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        
        <EditText
            android:layout_marginLeft="12dp"
            android:id="@+id/et_start"
            android:paddingLeft="8dp"
            android:layout_gravity="center"
            android:background="@drawable/rrect_gray_edit"
            android:hint="请输入起始排名"
            android:textSize="12sp"
            android:gravity="center|left"
            android:layout_width="110dp"
            android:layout_height="30dp" />
        <View
            android:background="#999999"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_width="16dp"
            android:layout_height="2dp"/>
        <EditText
            android:id="@+id/et_end"
            android:hint="请输入结束排名"
            android:paddingLeft="8dp"
            android:background="@drawable/rrect_gray_edit"
            android:textSize="12sp"
            android:gravity="center|left"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="30dp" />
        
        <TextView
            android:background="@drawable/rrect_green_confirm"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#eeeeee"
            android:text="确定"
            android:layout_gravity="center"
            android:layout_width="75dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
