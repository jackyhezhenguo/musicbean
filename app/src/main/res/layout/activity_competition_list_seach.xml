<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musicbean.competition.CompetitionListSeachActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#aaaaaa"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_left"
            android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="赛事列表"
            android:textColor="@color/black_alpha80"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <ImageView
            android:visibility="visible"
            android:src="@drawable/icon_search"
            android:id="@+id/tv_upload"
            android:textColor="@color/black_alpha80"
            android:text="上传"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_root"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/daohanglan"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:visibility="gone"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:paddingRight="12dp"
            android:src="@drawable/back_arrow" />

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/rrect_white_bg"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            
            <TextView
                android:textColor="#666666"
                android:textSize="13.5sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_city_selector"
                android:text="赛事城市"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/yinfu1"
                android:layout_width="80dp"
                android:layout_height="20dp" />



            <EditText
                android:layout_toRightOf="@+id/tv_city_selector"
                android:layout_marginLeft="7dp"
                android:id="@+id/edt_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:drawableLeft="#00000000"
                android:drawablePadding="0dp"
                android:background="@null"
                android:hint="请输入城市进行搜索"
                android:paddingLeft="8dp"
                android:paddingRight="18dp"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_hint"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/clear_input"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_clear_input"
                android:visibility="visible" />
        </RelativeLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/btn_search"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/rrect_green_smallcorner_bg"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@android:color/white"
            android:textSize="12sp" />


    </LinearLayout>
    <ListView
        android:id="@+id/lv_competition_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:padding="6dp"
        android:background="#88888888"
        android:layout_width="90dp"
        android:layout_height="90dp">
        <TextView
            android:textSize="12sp"
            android:textColor="#dddddd"
            android:text="赛事类型"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="28dp" />
        <TextView
            android:textSize="12sp"
            android:textColor="#dddddd"
            android:text="赛事年龄段"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="28dp" />
        <TextView
            android:textSize="12sp"
            android:textColor="#dddddd"
            android:text="参赛日期"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="28dp" />
    </LinearLayout>

</RelativeLayout>
