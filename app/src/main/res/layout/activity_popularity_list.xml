<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musicbean.ui.PopularityList.PopularityListActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/material_blue_grey_900"
        android:layout_height="40dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_marginLeft="53.3dp"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_speed_fastest"
            android:text="飙升最快"
            android:textColor="@color/black_alpha80"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="37dp" />
            <TextView
                android:id="@+id/tv_select1"
                android:background="#546378"
                android:layout_width="100dp"
                android:layout_height="3dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="53.3dp"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_popularity_highest"
                android:text="人气最高"
                android:textColor="@color/black_alpha80"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="37dp" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_select2"
                android:background="#546378"
                android:layout_width="100dp"
                android:layout_height="3dp" />

        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_list"
        android:divider="@null"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
