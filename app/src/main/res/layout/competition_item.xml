<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="240dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <TextView
            android:id="@+id/tv_competition_name"
            android:textSize="14sp"
            android:gravity="center|left"
            android:paddingLeft="13dp"
            android:text="赛事名称：童星现场秀"
            android:layout_width="180dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_count_down"
            android:gravity="center"
            android:textSize="12sp"
            android:text="倒计时：8天10小时20分"
            android:layout_width="180dp"
            android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_organizer"
        android:text="主办机构：主办机构"
        android:gravity="center|left"
        android:textSize="14sp"
        android:paddingLeft="13dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_city"
            android:text="比赛城市：北京"
            android:gravity="center|left"
            android:textSize="14sp"
            android:paddingLeft="13dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_price"
            android:text="报名费用：200元"
            android:gravity="center|left"
            android:textSize="14sp"
            android:paddingLeft="13dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_age"
            android:text="参赛年龄区间：4~8岁"
            android:gravity="center|left"
            android:textSize="14sp"
            android:paddingLeft="13dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_time"
            android:text="报名截止时间：2017.05.20"
            android:gravity="center|left"
            android:textSize="14sp"
            android:paddingLeft="13dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <TextView
            android:text="才艺标签："
            android:gravity="center|left"
            android:textSize="14sp"
            android:paddingLeft="13dp"
            android:layout_width="150dp"
            android:layout_height="20dp" />
            <TextView
                android:text="舞蹈"
                android:gravity="center"
                android:background="@drawable/tag_shape"
                android:textSize="12sp"
                android:layout_width="70dp"
                android:layout_height="20dp" />
            <TextView
                android:text="歌唱"
                android:gravity="center"
                android:background="@drawable/tag_shape"
                android:textSize="12sp"
                android:layout_width="70dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_apply"
            android:text="报名"
            android:background="#999999"
            android:textColor="#eeeeee"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="43dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_finish"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/yinfu1"
        android:layout_width="80dp"
        android:layout_height="80dp" />
</RelativeLayout>

</LinearLayout>
