<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musicbean.ui.PopularityList.ChildHeartActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#999999"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:src="@drawable/guanzhu_micicon"
            android:layout_height="30dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="315dp"
            android:layout_height="250dp">

            <ImageView
                android:layout_marginLeft="95dp"
                android:layout_marginTop="12dp"
                android:layout_width="80dp"
                android:src="@drawable/yinfu3"
                android:layout_height="80dp" />
            <TextView
                android:gravity="center"
                android:text="花小骨"
                android:textColor="#dddddd"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:layout_width="270dp"
                android:layout_height="25dp" />
            <TextView
                android:gravity="center"
                android:textColor="#dddddd"
                android:text="女/北京"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:layout_width="270dp"
                android:layout_height="25dp" />
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="42dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:text="2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:text="关注"
                        android:paddingBottom="1dp"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                </LinearLayout>
                <ImageView
                    android:background="#dddddd"
                    android:layout_marginTop="7dp"
                    android:layout_width="1dp"
                    android:layout_height="18dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:text="6253"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:text="粉丝"
                        android:paddingBottom="1dp"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                </LinearLayout>
                <ImageView
                    android:background="#dddddd"
                    android:layout_marginTop="7dp"
                    android:layout_width="1dp"
                    android:layout_height="18dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:text="8"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:text="人气排名"
                        android:paddingBottom="1dp"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                </LinearLayout>
                <ImageView
                    android:background="#dddddd"
                    android:layout_marginTop="7dp"
                    android:layout_width="1dp"
                    android:layout_height="18dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="42dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:text="21332"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:textColor="#dddddd"
                        android:gravity="center"
                        android:text="音悦豆"
                        android:paddingBottom="1dp"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:textColor="#cccccc"
                    android:textSize="13sp"
                    android:text="+ 关注"
                    android:background="@drawable/big_shape"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_width="90dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/tv_give"
                    android:gravity="center"
                    android:textColor="#cccccc"
                    android:textSize="13sp"
                    android:text="赠送音悦豆"
                    android:background="@drawable/big_shape"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_width="90dp"
                    android:layout_height="25dp" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_myvideo"
            android:textColor="#666666"
            android:gravity="center"
            android:textSize="17sp"
            android:text="我的视频"
            android:layout_width="match_parent"
            android:layout_height="47dp" />
        <TextView
            android:id="@+id/tv_s1"
            android:background="#444444"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="3dp" />
        </LinearLayout>
        <ImageView
            android:background="#333333"
            android:layout_marginTop="18dp"
            android:layout_width="1dp"
            android:layout_height="14dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_list"
            android:textColor="#666666"
            android:gravity="center"
            android:textSize="17sp"
            android:text="贡献榜单"
            android:layout_width="match_parent"
            android:layout_height="47dp" />
            <TextView
                android:id="@+id/tv_s2"
                android:visibility="invisible"
                android:background="#444444"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="3dp" />
            </LinearLayout>

        <ImageView
            android:background="#333333"
            android:layout_marginTop="18dp"
            android:layout_width="1dp"
            android:layout_height="14dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_myhonor"
            android:text="所获荣誉"
            android:textColor="#666666"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />
            <TextView
                android:id="@+id/tv_s3"
                android:visibility="invisible"
                android:background="#444444"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="3dp" />
            </LinearLayout>
    </LinearLayout>

    <GridView
        android:layout_margin="6dp"
        android:id="@+id/gv_video"
        android:scrollbars="none"
        android:numColumns="2"
        android:columnWidth="120dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>
    <ListView
        android:visibility="gone"
        android:divider="@null"
        android:id="@+id/lv_match_of_place"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <ListView
        android:divider="@null"
        android:visibility="gone"
        android:id="@+id/lv_contribution"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</LinearLayout>
    <FrameLayout
        android:id="@+id/fl_pay"
        android:visibility="gone"
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="260dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/present_shape"
            android:layout_height="150dp">

            <TextView
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#333333"
                android:text="赠送音悦豆？"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:textSize="13sp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:textColor="#333333"
                android:text="1音悦豆=1元"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <EditText
                android:layout_marginTop="10dp"
                android:textColorHint="#cccccc"
                android:layout_marginLeft="50dp"
                android:background="@drawable/abc_btn_default_mtrl_shape"
                android:textSize="13dp"
                android:hint="请输入音悦豆数量"
                android:id="@+id/et_how_many"
                android:layout_width="160dp"
                android:layout_height="40dp" />
            <TextView
                android:background="#aaaaaa"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_cancel"
                    android:text="取消"
                    android:textColor="#2087FD"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:background="#aaaaaa"
                    android:layout_weight="0.01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tv_comfirm"
                    android:textColor="#2087FD"
                    android:text="支付"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
